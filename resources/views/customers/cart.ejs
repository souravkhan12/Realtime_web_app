<section class="cart">
    <% if(session.cart){%>
    <div class="ordering container mx-auto w-1/2 py-16">
        <div class="flex items-center border-b border-gray-300 pb-4">
            <img src="/img/cart-black.png" alt="">
            <h1 class="font-bold ml-4 text-2xl">Order Summary</h1>
        </div>
        <div class="pizza-list">
            <%for(let pizza of Object.values(session.cart.items)){%>
            <div class="flex items-center my-8">
            <img class="w-24" src="/img/<%=pizza.item.image%>">
            <div class=" flex-1 ml-4">
                <h1><%=pizza.item.name%></h1>
                <span><%=pizza.item.size%></span>
             </div>
            <span class="flex-1"><%=pizza.qty%></span>
            <span class="font-bold text-lg"><%=pizza.item.price * pizza.qty %></span>
            </div>
            <%}%>
            <hr>
        </div>
        <div class="text-right py-4">
            <div class="flex flex-row justify-end mt-2">
                <h1 class="font-bold text-lg pt-1 capitalize">Total Amount: </h1>
                <span class="font-bold text-xl text-red-600 px-5 pt-1 ">$<%=session.cart.totalPrice%></span>
            </div>
            <div>
                <form action="" class="mt-12 flex flex-col items-end">
                    <input class="border border-gray-400  w-1/2 p-2 mb-4" placeholder="Phone Number" >
                    <input class="border border-gray-400   w-1/2 p-2" placeholder="Address" >
                </form>
                <div>
                    <button class="px-6 py-2 mt-3 rounded-full order text-white font-bold " type="submit">Order Now</button>
                </div>
            </div>
            <!-- < a href="" class="inline-block cursor-pointer order px-6 py-2 rounded-full">Login To continue</a> -->
        </div>
   </div>
   <%}else{%>
    <section class="empty-cart py-16">
        <div class="container mx-auto text-center">
            <h1 class="text-3xl font-bold mb-2 ">Cart Empty ðŸ˜Ÿ </h1>
            <p class="text-gray-500 text-lg mb-12">Your probably haven't ordered a pizza yet.<br>
                To order a pizza, got to the main page.
            </p>
            <img class="w-2/5 mx-auto py-20" src="/img/empty-cart.png" alt="empty">
            <a href="/" class="inline-block px-6 py-2 rounded-full order text-white font-bold ">Go back</a>
        </div>
    </section>
    <%}%>
</section>